{
    // Controls the rendering size of tabs in characters. Accepted values: "auto", 2, 4, 6, etc. If set to "auto", the value will be guessed when a file is opened.
    "editor.tabSize": 4,

    // Configure glob patterns for excluding files and folders in searches. Inherits all glob patterns from the file.exclude setting.
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "dist": true,
        "lib": true,
        "lib-amd": true,
        "temp": true,
        "coverage": true
    },

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/.editorconfig": true,
        "**/*.log": true,
        "**/package-deps.json": true,
        "**/{dist,lib,temp}": true
    },

    "eslint.enable": false,

    "json.schemas": [
        {
            "fileMatch": ["/rush.json"],
            "url": "https://developer.microsoft.com/json-schemas/rush/v5/rush.schema.json"
        }
    ]
}
